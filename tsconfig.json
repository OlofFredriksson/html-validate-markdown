{
    "compilerOptions": {
        "alwaysStrict": true,
        "baseUrl": "./src",
        "declaration": true,
        "esModuleInterop": true,
        "lib": ["es2017"],
        "module": "commonjs",
        "noEmit": true,
        "noImplicitAny": true,
        "outDir": "dist",
        "resolveJsonModule": true,
        "sourceMap": true,
        "target": "es2017",
        "strict": true,

        /* because the internet does not care about bad quality code in their libraries */
        "skipLibCheck": true
    },
    "include": ["src/**/*.ts", "test/**/*.ts"],
    "exclude": ["node_modules"]
}
