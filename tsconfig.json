{
    "extends": "@tsconfig/node20/tsconfig.json",
    "compilerOptions": {
        "rootDirs": ["./src", "./test"],
        "outDir": "./dist",
        "declaration": true,
        "noEmit": true,
        "module": "esnext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "sourceMap": true,
        "types": ["node", "jest"]
    },
    "include": ["src/**/*.ts", "test/**/*.ts"],
    "exclude": ["node_modules", "src/cjs-shim.ts"]
}
