{
    "extends": "@tsconfig/node20/tsconfig.json",
    "compilerOptions": {
        "rootDirs": ["./src", "./test"],
        "outDir": "./dist",
        "declaration": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "sourceMap": true
    },
    "include": ["src/**/*.ts", "test/**/*.ts"],
    "exclude": ["node_modules"]
}
