{
  "name": "html-validate-markdown",
  "version": "2.1.0",
  "main": "index.js",
  "description": "Transform Html blocks in Markdown files for use with html-validate.",
  "scripts": {
    "build": "tsc --build",
    "lint": "eslint src/*.ts test/*.ts",
    "postversion": "git push --follow-tags",
    "prettier:check": "prettier '**/*.{ts,js,json,md,scss}' --list-different",
    "prettier:write": "prettier '**/*.{ts,js,json,md,scss}' --write",
    "test": "jest"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,js,json,md,scss}": [
      "prettier --write",
      "git add"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/OlofFredriksson/html-validate-markdown.git"
  },
  "bugs": {
    "url": "https://github.com/OlofFredriksson/html-validate-markdown/issues"
  },
  "author": "Olof",
  "license": "MIT",
  "devDependencies": {
    "@sidvind/build-scripts": "^1.0.0",
    "@types/estree": "0.0.45",
    "@types/jest": "^24.9.1",
    "@types/node": "^11.15.27",
    "@typescript-eslint/eslint-plugin": "^4.3.0",
    "@typescript-eslint/parser": "^4.3.0",
    "eslint": "^7.10.0",
    "eslint-config-prettier": "^6.12.0",
    "eslint-config-sidvind": "^1.3.2",
    "eslint-plugin-jest": "^22.21.0",
    "eslint-plugin-prettier": "^3.1.4",
    "html-validate": "^2.23.1",
    "husky": "^1.3.1",
    "jest": "^26.4.2",
    "lint-staged": "^8.2.1",
    "prettier": "^2.1.2",
    "ts-jest": "^26.4.1",
    "typescript": "^4.0.3"
  },
  "peerDependencies": {
    "html-validate": ">=2.0.0"
  },
  "jest": {
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.ts"
    ],
    "coverageReporters": [
      "text",
      "text-summary"
    ],
    "testRegex": "(/__tests__/.+|(\\.|/)(test|spec))\\.tsx?$",
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    }
  }
}
