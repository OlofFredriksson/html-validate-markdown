{
  "name": "html-validate-markdown",
  "version": "3.0.0",
  "main": "dist/transform.js",
  "files": [
    "dist",
    "index.js",
    "!**/*.snap",
    "!**/*.spec.d.ts",
    "!**/*.spec.js"
  ],
  "description": "Transform Html blocks in Markdown files for use with html-validate.",
  "scripts": {
    "build": "tsc --build",
    "lint": "eslint src/*.ts test/*.ts && npm run prettier:check",
    "postversion": "git push --follow-tags",
    "prettier:check": "prettier . --list-different",
    "prettier:write": "prettier . --write",
    "test": "jest"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,js,json,md,scss}": "prettier --write"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/OlofFredriksson/html-validate-markdown.git"
  },
  "bugs": {
    "url": "https://github.com/OlofFredriksson/html-validate-markdown/issues"
  },
  "author": "Olof",
  "license": "MIT",
  "devDependencies": {
    "@sidvind/build-scripts": "^1.0.0",
    "@types/jest": "^27.5.0",
    "@types/node": "^14.18.16",
    "@typescript-eslint/eslint-plugin": "^5.22.0",
    "@typescript-eslint/parser": "^5.22.0",
    "eslint": "^8.15.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-sidvind": "^1.3.2",
    "eslint-plugin-jest": "^26.1.5",
    "eslint-plugin-prettier": "^4.0.0",
    "html-validate": "^7.0.0",
    "husky": "^1.3.1",
    "jest": "^28.1.0",
    "lint-staged": "^11.0.0",
    "prettier": "^2.6.2",
    "ts-jest": "^28.0.2",
    "typescript": "^4.6.4"
  },
  "peerDependencies": {
    "html-validate": "^2.17 || ^3 || ^4 || ^5 || ^6 || ^7"
  },
  "jest": {
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.ts"
    ],
    "coverageReporters": [
      "text",
      "text-summary"
    ],
    "testRegex": "(/__tests__/.+|(\\.|/)(test|spec))\\.tsx?$",
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    }
  },
  "engines": {
    "node": ">= 14.0"
  }
}
